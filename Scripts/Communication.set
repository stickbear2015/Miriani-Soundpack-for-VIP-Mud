   PushMessage {@TmpCommunication2} {[@TmpCommunication2] @TmpCommunication1: @TmpCommunication3};
   #Var TmpCommunication1 {}
  }
 } {
  #Var TmpCommunication2 {%Word(@TmpCommunication1, ,%NumWords(@TmpCommunication1, ))};

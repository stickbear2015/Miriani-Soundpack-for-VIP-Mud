   };
   #If {@TmpCommunication4=" into a small microphone and listen as it is played through the ship's external PA."} {
    #If {@StripMessagePrefix=1 and @TmpCommunication2="say" and %Right(%1,8)<>" and say"} {
     #Var TmpCommunication1 {}
